# editorconfig.org
# 使用两个空格缩进tab长度也是两个空格，trim_trailing_whitespace用来删除每一行最后多余的空格，
# insert_final_newline 用来在代码最后插入一个空的换行。
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
tab_width = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
